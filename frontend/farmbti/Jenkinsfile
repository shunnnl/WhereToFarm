                    if ! command -v npm &> /dev/null; then
                        echo "âŒ npmì´ ê°ì§€ë˜ì§€ ì•ŠìŒ. npmì„ ì„¤ì¹˜í•´ì•¼ í•©ë‹ˆë‹¤."
                        exit 1
                    fi

                    npm install
