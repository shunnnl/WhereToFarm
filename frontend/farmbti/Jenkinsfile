        DOCKER_CREDENTIALS_ID = 'docker-hub'  // Docker Hub ë¡œê·¸ì¸ ì •ë³´
        NODE_VERSION = "18"  // ì‚¬ìš©í•  Node.js ë²„ì „
    }

    stages {
