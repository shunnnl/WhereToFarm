pipeline {
    agent any

    environment {
        IMAGE_NAME = "nageum/s12p21d209_frontend"  // Docker Hub ì´ë¯¸ì§€ëª…
        CONTAINER_NAME = "farmbti-frontend"  // ì»¨í…Œì´ë„ˆ ì´ë¦„
        PORT = "3000"
