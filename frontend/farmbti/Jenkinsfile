pipeline {
    agent any

    environment {
        IMAGE_NAME = "nageum/s12p21d209_frontend"  // Docker Hub 이미지명
        CONTAINER_NAME = "farmbti-frontend"  // 컨테이너 이름
        PORT = "3000"
        GIT_CREDENTIALS_ID = 'gitlab-credentials'  // GitLab 로그인 정보
        DOCKER_CREDENTIALS_ID = 'docker-hub'  // Docker Hub 로그인 정보
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/front']],  // front 브랜치 사용
                    userRemoteConfigs: [[
                        url: 'https://lab.ssafy.com/s12-bigdata-dist-sub1/S12P21D209.git',
                        credentialsId: "${GIT_CREDENTIALS_ID}"
                    ]]
                ])
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend/farmbti') {
                    sh '''
                    #!/bin/bash
                    set -e
                    echo "✅ 프론트엔드 빌드 시작"
                    npm install
                    npm run build
                    echo "✅ 빌드 완료"
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('frontend/farmbti') {
                    sh '''
                    #!/bin/bash
                    set -e
                    echo "✅ Docker 이미지 빌드 시작"
                    docker build -t ${IMAGE_NAME}:latest .
                    echo "✅ Docker 이미지 빌드 완료"
                    '''
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                withDockerRegistry([credentialsId: "${DOCKER_CREDENTIALS_ID}", url: 'https://index.docker.io/v1/']) {
                    sh '''
                    #!/bin/bash
                    set -e
                    echo "✅ Docker Hub에 이미지 푸시 중..."
                    docker push ${IMAGE_NAME}:latest
                    echo "✅ Docker 이미지 푸시 완료"
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "✅ 기존 컨테이너 종료 및 삭제"
                    sh 'docker-compose -f frontend/farmbti/docker-compose.yml down || true'
                    
                    echo "✅ 새로운 컨테이너 실행"
                    sh 'docker-compose -f frontend/farmbti/docker-compose.yml up -d'

                    echo "✅ 배포 완료"
                }
            }
        }
    }
}
