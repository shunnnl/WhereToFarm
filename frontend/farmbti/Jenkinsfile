        }

        stage('Build Frontend') {
            steps {
                dir('frontend/farmbti') {
                    sh '''
                    #!/bin/bash
                    set -e
                    echo "âœ… í”„ë¡ íŠ¸ì—”ë“œ ë¹Œë“œ ì‹œì‘"
                    
                    # í™˜ê²½ ë³€ìˆ˜ ë¡œë“œ
                    #export PATH=$PATH:/usr/local/bin
                    #export NODE_ENV=production
                    
                    # Jenkinsì—ì„œ ì„¤ì •í•œ Node.js ê²½ë¡œ ì‚¬ìš©
                    export PATH=$PATH:/var/lib/jenkins/tools/hudson.plugins.nodejs.tools.NodeJSInstallation/NodeJS_18/bin
                    export NODE_ENV=production

                    # Node.js ì„¤ì¹˜ ì—¬ë¶€ í™•ì¸ í›„ ë¹Œë“œ
                    if ! command -v node &> /dev/null; then
                        echo "âŒ Node.jsê°€ ê°ì§€ë˜ì§€ ì•ŠìŒ. Node.jsë¥¼ ì„¤ì¹˜í•´ì•¼ í•©ë‹ˆë‹¤."
                        exit 1
