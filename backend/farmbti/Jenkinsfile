pipeline {
    agent any

    environment {
        IMAGE_NAME = "farmbti_backend"
        CONTAINER_NAME = "farmbti-backend"
        PORT = "8081"
        GIT_CREDENTIALS_ID = 'gitlab-credentials'
        DOCKER_CREDENTIALS_ID = 'docker-hub'
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/backend']],
                    userRemoteConfigs: [[
                        url: 'https://lab.ssafy.com/s12-bigdata-dist-sub1/S12P21D209.git',
                        credentialsId: 'gitlab-credentials'
                    ]]
                ])
            }
        }

        stage('Load .env File') {
            steps {
                configFileProvider([configFile(fileId: 'env-config', targetLocation: 'backend/farmbti/.env')]) {
                    script {
                        echo "✅ .env 파일 로드 완료"
                    }
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('backend/farmbti') {
                    sh '''
                    #!/bin/bash
                    set -e
                    echo "✅ 백엔드 빌드 시작"
                    export JAVA_TOOL_OPTIONS="-Dfile.encoding=UTF-8"
                    ./gradlew clean build
                    echo "✅ 빌드 완료"
                    '''
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub', usernameVariable: 'DOCKER_HUB_USERNAME', passwordVariable: 'DOCKER_HUB_PASSWORD')]) {
                        echo "✅ Docker Hub 로그인"
                        sh "echo '${DOCKER_HUB_PASSWORD}' | docker login -u '${DOCKER_HUB_USERNAME}' --password-stdin"

                        echo "✅ Docker 이미지 빌드 및 태그 지정"
                        sh "docker build -t ${DOCKER_HUB_USERNAME}/${IMAGE_NAME}:latest backend/farmbti"

                        echo "✅ Docker Hub에 푸시"
                        sh "docker push ${DOCKER_HUB_USERNAME}/${IMAGE_NAME}:latest"

                        echo "✅ Docker 이미지 푸시 완료!"
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "✅ 기존 컨테이너 종료 및 삭제"
                    sh "docker stop ${CONTAINER_NAME} || true"
                    sh "docker rm ${CONTAINER_NAME} || true"

                    echo "✅ 최신 이미지 가져오기"
                    sh "docker pull ${DOCKER_HUB_USERNAME}/${IMAGE_NAME}:latest"

                    echo "✅ 컨테이너 실행"
                    sh '''
                    docker run -d --name ${CONTAINER_NAME} \
                    --env-file=backend/farmbti/.env \
                    -p ${PORT}:8080 ${DOCKER_HUB_USERNAME}/${IMAGE_NAME}:latest
                    '''

                    echo "✅ 배포 완료!!"
                    sh 'docker ps -a | grep ${CONTAINER_NAME}'
                }
            }
        }
    }
}
